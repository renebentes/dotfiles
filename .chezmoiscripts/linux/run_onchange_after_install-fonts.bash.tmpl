#!/usr/bin/env bash

# ~/.local/share/chezmoi/run_after_install-fonts.bash
# ============================================================================
# Runs after `chezmoi apply` when content was changed to install fonts on Linux.
#
# Chezmoi will skip this script on other operating systems.
#
# See https://www.chezmoi.io/user-guide/use-scripts-to-perform-actions/

{{ if eq .chezmoi.os "linux" -}}
fc-cache -fv
{{- end }}
